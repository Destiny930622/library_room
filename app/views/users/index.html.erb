<h1>User List</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
   </tr>

<% @users.each do |user|%>
	<tr>
		<td><%= link_to user.name, user_path(user)%></td>
		<td><%= link_to "Edit", edit_user_path(user) %></td>
		<td><%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure?"} %></td>
	</tr>
<% end %>
</table>

<%= link_to 'Add User', new_user_path %>